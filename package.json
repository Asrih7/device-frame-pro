{
  "name": "device-emulator-tool",
  "version": "1.0.0",
  "description": "Multi-device emulator for testing web applications across different frameworks",
  "main": "dist/server/index.js",
  "bin": {
    "device-emulator": "./bin/device-emulator.js"
  },
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:client": "webpack --mode production",
    "build:server": "tsc",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "webpack --mode development --watch",
    "dev:server": "tsc --watch",
    "start": "node dist/server/index.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": ["emulator", "testing", "multi-device", "responsive", "vue", "react", "angular"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "http-proxy-middleware": "^2.0.6",
    "chalk": "^4.1.2",
    "commander": "^10.0.1",
    "open": "^8.4.2",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/node": "^20.4.5",
    "@types/express": "^4.17.17",
    "@types/ws": "^8.5.5",
    "@types/cors": "^2.8.17",
    "typescript": "^5.1.6",
    "webpack": "^5.88.1",
    "webpack-cli": "^5.1.4",
    "ts-loader": "^9.4.4",
    "html-webpack-plugin": "^5.5.3",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "concurrently": "^8.2.0"
  }
}